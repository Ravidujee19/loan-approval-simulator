# ------- Server -------
ENV=dev
API_TITLE=Applicant Evaluator API
API_VERSION=v1
SECRET_KEY=dev-secret-change
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALLOWED_ORIGINS=["http://localhost:5173","http://127.0.0.1:5173","http://localhost:8000"]

# ------- Database -------
DATABASE_URL=postgresql+psycopg2://app:app@localhost:5432/evaluator

# ------- Security -------
RATE_LIMIT_DEFAULT_PER_MIN=60
RATE_LIMIT_ADMIN_PER_MIN=30

# ------- Idempotency / Cache -------
CACHE_BACKEND=memory   # memory|redis
REDIS_URL=redis://localhost:6379/0
IDEMPOTENCY_TTL_SECONDS=86400

# ------- Rules / Finance -------
ANNUAL_INTEREST_RATE=0.12
MIN_INCOME=50000
UNEMPLOYED_MIN_OTHER_INCOME=25000
MAX_DEBT_RATIO=0.40

# ------- Observability -------
ENABLE_OTEL=false
PROMETHEUS_ENABLED=true

# ------- Admin -------
SEED_ON_START=true
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_PASSWORD=Admin@12345
